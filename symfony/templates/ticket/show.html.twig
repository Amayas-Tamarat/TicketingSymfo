{% extends 'base.html.twig' %}

{% block title %}{{ticket.titre}}{% endblock %}

{% block body %} 
    <article>
        <header>
            <h1 class="titreTicket">{{ticket.titre}}</h1>
            <time>{{ ticket.date|date('Y/m/d') }}</time>
        </header>
        <p>{{ticket.contenu}}</p>
    </article>
    <hr />

    <header>
        <h1 id="titreReponses">Réponses à {{ticket.titre}}</h1>
    </header>
    {% for commentaire in ticket.commentaires %}
        <p> {{ commentaire.date|date('Y/m/d') }}</p>
        <p> {{ commentaire.auteur }} dit :</p>
        <p> {{ commentaire.contenue }} </p>
    {% endfor %} 
    <hr />

    <form method="post" action="index.php?action=commenter">
        <input id="auteur" name="auteur" type="text" placeholder="Votre pseudo" 
            required /><br />
        <textarea id="txtCommentaire" name="contenu" rows="4" 
                placeholder="Votre commentaire" required></textarea><br />
        <input type="hidden" name="id" value="" />
        <input type="submit" value="Commenter" />
    </form>
{% endblock %}






